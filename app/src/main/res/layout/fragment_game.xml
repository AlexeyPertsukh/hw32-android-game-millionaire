<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_millionair"
    >

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Question"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAnswer1"
        style="@style/StyleTvAnswer"
        android:layout_marginTop="36dp"
        android:background="@drawable/draw_tv_white"
        android:gravity="left|center"
        android:text="Answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
        />

    <TextView
        android:id="@+id/tvAnswer2"
        style="@style/StyleTvAnswer"
        android:layout_marginTop="24dp"
        android:background="@drawable/draw_tv_white"
        android:gravity="left|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAnswer1"
        android:text="Answer2"
        />

    <TextView
        android:id="@+id/tvAnswer3"
        style="@style/StyleTvAnswer"
        android:layout_marginTop="24dp"
        android:background="@drawable/draw_tv_white"
        android:gravity="left|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAnswer2"
        android:text="Answer3"
        />

    <TextView
        android:id="@+id/tvAnswer4"
        style="@style/StyleTvAnswer"
        android:layout_marginTop="24dp"
        android:background="@drawable/draw_tv_white"
        android:gravity="left|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAnswer3"
        android:text="Answer4"
        />


</androidx.constraintlayout.widget.ConstraintLayout>